pipeline {
    agent any 

    tools {
        // Spécifiez les outils à utiliser, par exemple maven, nodejs, etc.
        // maven 'Maven 3.6.3'
        // nodejs 'Node 12'
    }

    environment {
        // Définir les variables d'environnement, comme la clé API Heroku
        HEROKU_API_KEY = credentials('heroku_api_key')
    }

    stages {
        stage('Checkout') {
            steps {
                // Récupération du code source
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building...'
                // Exemple pour un projet Java avec Maven
                // sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
                // Exemple pour l'exécution de tests unitaires
                // sh 'mvn test'
            }
        }

        stage('Deploy to Heroku') {
            steps {
                echo 'Deploying to Heroku...'
                script {
                    // Commandes pour déployer sur Heroku
                    sh 'heroku login'
                    sh 'git push heroku master'
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run.'
        }

        success {
            echo 'Build succeeded!'
        }

        failure {
            echo 'Build failed!'
        }

        unstable {
            echo 'Something is wrong with the build!'
        }

        changed {
            echo 'Things were different before!'
        }
    }
}
